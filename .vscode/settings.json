{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "prettier.useEditorConfig": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true
  },
  "emmet.includeLanguages": {
    "twig": "html",
    "javascript": "html"
  },
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "##",
      "color": "#8854d0",
      "strikethrough": false,
      "backgroundColor": "#d1d8e0"
    },
    {
      "tag": "#region",
      "color": "#8854d0",
      "strikethrough": false,
      "backgroundColor": "#d1d8e0"
    },
    {
      "tag": "#endregion",
      "color": "#8854d0",
      "strikethrough": false,
      "backgroundColor": "#d1d8e0"
    }
  ],
  "emojisense.languages": {
    "javascript": true
  },
  "workbench.iconTheme": "material-icon-theme",
  "bracket-pair-colorizer-2.scopeLineCSS": [
    "borderStyle : solid",
    "borderWidth : 3px",
    "borderColor : {color}",
    "opacity: 0.5"
  ],
  "bracket-pair-colorizer-2.colors": ["Gold", "Orchid", "LightSkyBlue"]
}
